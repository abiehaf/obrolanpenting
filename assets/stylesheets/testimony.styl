#page-testimony-index, #page-testimony-view
  background-color #eee

#testimonies
  margin 0
  padding 0
  // background-color #000066
  .testimony
    list-style none
    display inline-block
    height 50px
    margin 0 0 10px 0
    padding 0
    width 100%

    .photo
      width 50px
      height 50px
      float left
      overflow hidden
      border-radius 50%
      box-shadow 0 0 5px rgba(0, 0, 0, .2)
      img
        width 50px
    .body
      margin-left 55px
      height 50px
      // border 1px solid #ccc
      padding 5px
      border-radius 5px
      background-color #fff
      box-shadow 0 0 5px rgba(0, 0, 0, .2)

      a
        text-decoration none !important

      .name
        font-weight bold
        font-size .8em
        &:hover
          text-decoration underline

      .content
        width 100%
        height 22px
        overflow hidden
        margin 2px 0
        color #222 !important
        text-decoration none !important

  @media (min-width: 580px)
    .testimony
      width 46%
      margin 2%

  @media (min-width: 1000px)
    .testimony
      width 29%
      margin 2%


#testimony
  .photo
    width 120px
    height 120px
    border-radius 50%
    overflow hidden
    box-shadow 0 0 5px rgba(0, 0, 0, .2)
    float left

    img
      width 120px
      height 120px

  .body
    margin-left 130px
    padding 10px
    border-radius 5px
    background-color #fff
    box-shadow 0 0 5px rgba(0, 0, 0, .2)
    min-height 120px

    .name
      font-weight bold

    .content
      font-size 1.5em
