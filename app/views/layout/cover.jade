    .container-inner
        .header
          .padding-10
            h1.brand.title: a(href='/')
              img(src='/img/logo.png')
              span Obrolan Penting
            nav
              ul.nav
                each label,name in {'testimony.index': 'Banten Itu...', 'home.about': 'Tentang Kami'}
                  //if nav.name == req.router_name
